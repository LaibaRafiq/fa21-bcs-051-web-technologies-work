<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Product List</title>
    <style>
        body {
            background-image: url('/img/listpage.png');
            background-size: contain;
        }
        .navbar {
            background-color: #d7dbe0e0;
        }
        .plant-list-container {
            position: relative;
            padding-top: 100px;
        }
        .header-section {
            background-size: cover;
            background-position: center;
            padding: 50px 0;
        }
        .plant-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fef8ed;
            border: 1px solid black;
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease-in-out;
        }
        .plant-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
        }
        .card-body {
            padding: 20px;
        }
        .card-title {
            font-size: 2.25rem;
            color: #333;
            font-style: italic;
        }
        .card-text {
            color: #666;
        }
        .text-center {
            color: rgb(0, 0, 0);
        }
        .description {
            height: 80px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .card-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 10px;
        }
        .btn-warning, .btn-danger {
            color: #fff;
            background-color: #347f56;
            font-size: 1.3rem;
        }
        .pagination-nav {
            display: flex;
            justify-content: center;
        }
        .page-link {
            color: #007bff;
        }
        .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
        .page-link:hover {
            color: #0056b3;
        }
        .mb-3 {
            margin-bottom: 1rem !important;
            width: 228px;
            background-color: #347f56;
        }
    </style>
</head>
<body>
    <div class="plant-list-container container">
        <div class="inner">
            <div class="header-section">
                <h1 class="text-center">Product List</h1>
            </div>
            <% if (user && user.role === 'admin') { %>
                <a href="/plants/new" class="btn btn-primary mb-3">Add New Plant</a>
                <p>Page: <%= page %> Records: <%= total %></p>
            <% } %>
            <div class="row">
                <% for(let index = 0; index < plants.length; index++) { %>
                    <div class="col-lg-6 mb-4">
                        <div class="plant-card">
                            <div class="card-body">
                                <h5 class="card-title"><%= plants[index].name %></h5>
                                <p class="card-text">Species: <%= plants[index].species %></p>
                                <p class="card-text">Price: $<%= plants[index].price %></p>
                                <p class="card-text description">Description: <%= plants[index].description %></p>
                                <% if (user && user.role === 'admin') { %>
                                    <div class="card-actions">
                                        <a href="/plants/<%= plants[index]._id %>/edit" class="btn btn-warning">Edit</a>
                                        <a href="/plants/<%= plants[index]._id %>/delete" class="btn btn-danger">Delete</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            <nav class="pagination-nav mt-4" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% for(let index = 1; index <= totalPages; index++) { %>
                        <li class="page-item"><a class="page-link" href="/products/<%= index %>"><%= index %></a></li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</body>
</html>
