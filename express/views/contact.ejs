<!DOCTYPE html>
<html>
<head>
  <title>Contact Us</title>
</head>
<body>
  <!-- CONTACT US  -->

  <% if (user && user.role === 'user') { %>
    <% if (typeof successMessage !== 'undefined' && successMessage !== null) { %>
      <div class="success-message" style="background-color: green; font-size: 1.5rem;">
        <%= successMessage %>
      </div>
    <% } %>
    <main>
      <div class="box">
        <div class="inner-box">
          <div class="contact-info">
            <h2>Contact Us</h2>
            <div class="info">
              <p><strong>Email:</strong> plants@gmail.com</p>
              <p><strong>Phone:</strong> 123-456-7890</p>
              <p><strong>Address:</strong> 123 ,street,country</p>
            </div>
            <img src="img/img1.png" alt="Company Photo">
          </div>
          <div class="forms-wrap">
            <form action="/contact" method="POST" autocomplete="off" class="contact-form">
              <div class="actual-form">
                <div class="input-wrap">
                  <label>Full Name</label>
                  <input type="text" name="name" class="input-field" autocomplete="off" required>
                  <div class="error"></div>
                </div>

                <div class="input-wrap">
                  <label>Email</label>
                  <input type="email" name="email" class="input-field" autocomplete="off" required>
                  <div class="error"></div>
                </div>

                <div class="input-wrap">
                  <label>Select Gender</label>
                  <select class="input-field" name="gender" required>
                    <option value="" disabled selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                  </select>
                  <div class="error"></div>
                </div>

                <div class="input-wrap">
                  <label>Message</label>
                  <textarea class="input-field" name="message" rows="4" required></textarea>
                  <div class="error"></div>
                </div>

                <input type="submit" value="Send Message" class="send-btn">
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  <% } else { %>
    <main>
      <div class="alert alert-warning text-center" role="alert">
        YOU NEED TO BE LOGGED IN TO ACCESS THIS PAGE
      </div>
    </main>
  <% } %>
</body>
</html>

